{
  "name": "herdmanager-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:e2e": "next dev --port 3100",
    "dev:turbo": "next dev --turbo",
    "prebuild": "node -e \"const fs=require('fs');const path=require('path');const src=path.join(process.cwd(),'..','shared','api','openapi.yaml');const dest=path.join(process.cwd(),'public','openapi.yaml');if(fs.existsSync(src)){fs.mkdirSync(path.dirname(dest),{recursive:true});fs.copyFileSync(src,dest);}\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "ci": "pnpm test:run && pnpm build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci:e2e": "playwright install --with-deps chromium && pnpm test:e2e"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "firebase": "^11.0.2",
    "jspdf": "^4.2.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.15.0",
    "eslint-config-next": "^15.1.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
}
